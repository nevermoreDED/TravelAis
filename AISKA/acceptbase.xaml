<Page x:Class="AISKA.acceptbase"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AISKA"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="200"
      Title="acceptbase">

    <Grid>
        <Border Height="450" Width="800" CornerRadius="0">
            <Border.Background>
                <RadialGradientBrush GradientOrigin="0,2">
                    <GradientStop Color="#FF1C1F21" Offset="1"/>
                    <GradientStop Color="#0984d1" Offset="0.13"/>
                </RadialGradientBrush>
            </Border.Background>
        </Border>
        <Button Content="Бронирование" HorizontalAlignment="Center" Margin="0,68,0,0" VerticalAlignment="Top" Click="Button_Click_2" />
        <Button Content="Карты" HorizontalAlignment="Center" Margin="0,93,0,0" VerticalAlignment="Top" Click="Button_Click" Width="86"/>
        <Button Content="Выход" HorizontalAlignment="Center" Margin="0,118,0,0" VerticalAlignment="Top" Click="Button_Click_1" Width="86"/>
        <Button Content="Авиабилеты" HorizontalAlignment="Center" Margin="0,43,0,0" VerticalAlignment="Top" Width="86" Click="Button_Click_3"/>

    </Grid>
</Page>
